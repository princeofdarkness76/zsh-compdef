#compdef udp-sender

local ret=1

_arguments -S \
  '(-6)-4[family AF_INET]' \
  '(-4)-6[family AF_INET6]' \
  '-c+[packet count to send]:count:' \
  '(-f)-d+[delay in milliseconds between sends]:ms:' \
  '(-d)-f[flood send packets]' \
  '-p+[port to connect to]:port:_ports' \
  '-P+[packet size in bytes]:bytes:' \
  '*:host:_hosts' \
  && ret=0

return $ret
